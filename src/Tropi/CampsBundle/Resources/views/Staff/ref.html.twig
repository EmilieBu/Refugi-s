{% extends "TropiCampsBundle:Staff:layout.html.twig" %}

{% block title %}
    {{ parent() }} Admin-réfugié
{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}


{% block main %}
<div class="container" style="padding-top:70px">
    {% if refName is defined %}
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>Ajouté!</strong> {{ refName }} est bien enrégistré.
    </div>
    {% endif %}
    <div class="row">
        <button type="button" class="btn btn-primary btn-lg center-block" data-toggle="modal" data-target="#trouver" style="margin:40px auto">
            Ajouter un réfugié
        </button>
    </div>
    <table class="table table-striped">
        <thead> 
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Camp</th>
                <th>Malade</th>
                <th><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></th>
            </tr>
        </thead> 
        <tbody>
            {% for refugie in refugies %}
            <tr>
                <th scope="row">{{ refugie.id }}</th>
                <td>{% if refugie.nom is not null %}
                    {{ refugie.nom }}
                    {% else %}
                    inconnu
                    {% endif %}
                </td>
                <td>{{ refugie.prenom }}</td>
                <td>{{ refugie.camp }}</td>
                <td>{% if refugie.contamine %}
                    <span class="glyphicon glyphicon-minus"></span>
                    {% endif %}
                </td>
                <th><a href="{{ path('tca_mod_refugie',{'id':refugie.id}) }}" class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></th>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

    <div class="container-fluid">

    </div>

    <!-- Modal -->
    <div class="modal fade" id="trouver" tabindex="-1" role="dialog" aria-labelledby="trouverLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="trouverLabel">Ajouter un nouveau réfugié</h4>
          </div>
          <div class="modal-body">            
            {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary center-block">Ajouter</button>
            {{ form_end(form) }}
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            
          </div>
        </div>
      </div>
    </div>


{% endblock %}